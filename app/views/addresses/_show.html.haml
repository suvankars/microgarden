- model_class = Address
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @address.name
%p
  %strong= model_class.human_attribute_name(:pincode) + ':'
  %br
  = @address.pincode
%p
  %strong= model_class.human_attribute_name(:address_line_1) + ':'
  %br
  = @address.address_line_1
%p
  %strong= model_class.human_attribute_name(:address_line_2) + ':'
  %br
  = @address.address_line_2
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @address.city
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @address.state
%p
  %strong= model_class.human_attribute_name(:country) + ':'
  %br
  = @address.country
%p
  %strong= model_class.human_attribute_name(:supplier_id) + ':'
  %br
  = @address.supplier_id


= link_to t('.back', :default => t("helpers.links.back")), supplier_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_supplier_address_path(@supplier, @address), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), supplier_address_path(@supplier, @address), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
