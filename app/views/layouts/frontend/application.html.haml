!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Cycleyard'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Cycleyard'}"}
    = stylesheet_link_tag 'frontend/application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'frontend/application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/frontend/navigation'
    %main{:role => "main"}
      = render 'layouts/frontend/messages'
      = yield
