- model_class = Size
= content_for :header do
  %p.buttons= link_to t('.new', :default => t("helpers.links.new")), new_size_path, :class => 'btn btn-primary'
  %h2=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:volume)
      %th= model_class.human_attribute_name(:unit)
      %th= model_class.human_attribute_name(:created_at)
      %th.headactions
        =t '.actions', :default => t("helpers.actions")
  %tbody
    - @sizes.each do |size|
      %tr
        %td= link_to size.id, size_path(size)
        %td= size.name
        %td= size.volume
        %td= size.unit
        %td=l size.created_at
        %td.actions
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_size_path(size), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), size_path(size), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'



