- model_class = Subcategory

= content_for :header do
  %p.buttons= link_to t('.destroy', :default => t("helpers.links.destroy")), category_subcategory_path(@category, @subcategory), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
  %p.buttons= link_to t('.edit', :default => t("helpers.links.edit")), edit_category_subcategory_path(@category, @subcategory), :class => 'btn btn-default'
  %p.buttons= link_to t('.back', :default => t("helpers.links.back")), category_path(@category), :class => 'btn btn-default'
  

  %h2=t '.title', :default => @subcategory.name.titleize

=render 'product_list'
