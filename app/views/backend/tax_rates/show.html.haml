- model_class = TaxRate
= content_for :header do
  %h2=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @tax_rate.name
%p
  %strong= model_class.human_attribute_name(:code) + ':'
  %br
  = @tax_rate.code
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @tax_rate.description
%p
  %strong= model_class.human_attribute_name(:rate) + ':'
  %br
  = @tax_rate.rate


= link_to t('.back', :default => t("helpers.links.back")), tax_rates_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_tax_rate_path(@tax_rate), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), tax_rate_path(@tax_rate), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
