- model_class = Finance
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:price_list) + ':'
  %br
  = @finance.price_list
%p
  %strong= model_class.human_attribute_name(:currency) + ':'
  %br
  = @finance.currency
%p
  %strong= model_class.human_attribute_name(:tax_code) + ':'
  %br
  = @finance.tax_code
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @finance.email
%p
  %strong= model_class.human_attribute_name(:registration_number) + ':'
  %br
  = @finance.registration_number
%p
  %strong= model_class.human_attribute_name(:payment_method) + ':'
  %br
  = @finance.payment_method
%p
  %strong= model_class.human_attribute_name(:credit_limit) + ':'
  %br
  = @finance.credit_limit
%p
  %strong= model_class.human_attribute_name(:credit_lead_time) + ':'
  %br
  = @finance.credit_lead_time
%p
  %strong= model_class.human_attribute_name(:bank_name) + ':'
  %br
  = @finance.bank_name
%p
  %strong= model_class.human_attribute_name(:account_number) + ':'
  %br
  = @finance.account_number
%p
  %strong= model_class.human_attribute_name(:IFSC_code) + ':'
  %br
  = @finance.IFSC_code
%p
  %strong= model_class.human_attribute_name(:supplier_id) + ':'
  %br
  = @finance.supplier_id


= link_to t('.back', :default => t("helpers.links.back")), supplier_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_supplier_finance_path(@supplier, @finance), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), supplier_finance_path(@supplier, @finance), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
