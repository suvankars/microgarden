= simple_form_for ([@category, @subcategory]), :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = error_span(@category[:name])
  = f.input :description
  = error_span(@category[:description])
  - f.fields_for :field do |builder|
    = render 'subcategories/field_fields', f: builder 
  %br
  = link_to_add_fields "Add Field", f, :fields, 'add_fields btn btn-success pull-right btn-lg'
  %br
  %br
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), categories_path, :class => 'btn btn-default'

  