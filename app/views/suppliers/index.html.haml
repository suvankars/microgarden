- model_class = Supplier
= content_for :header do
  %p.buttons
    = link_to t('.new', :default => t("helpers.links.new")), new_supplier_path, :class => 'btn btn-success'
  %h2=t '.title', :default => model_class.model_name.human.pluralize.titleize

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:company)
      %th= model_class.human_attribute_name(:code)
      %th= model_class.human_attribute_name(:status)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @suppliers.each do |supplier|
      %tr
        %td= link_to supplier.id, supplier_path(supplier)
        %td= supplier.company
        %td= supplier.code
        %td= supplier.status
        %td= supplier.description
        %td=l supplier.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_supplier_path(supplier), :class => 'btn btn-default btn-xs'
          = link_to t('.show', :default => t("helpers.links.show")), supplier_path(supplier), :class => 'btn btn-default btn-xs' 
          = link_to t('.destroy', :default => t("helpers.links.destroy")), supplier_path(supplier), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'


