        /         %label Drop
        /         = f.text_field :with_created_at_gte,
        /          :class => 'js-datepicker form-control'     
                    
    /   .container
    /     .col-md-5
    /       .form-group
    /         #datetimepicker6.input-group.date
    /           %input.form-control{:type => "text"}/
    /           %span.input-group-addon
