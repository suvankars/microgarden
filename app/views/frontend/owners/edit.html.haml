/- model_class = Owner
/.page-header
/%h1=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize
%br
.row
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Edit My Profile
      .panel-body
        = render :partial => "form"
      .panel-footer.footer-action
        = link_to t('rider.cancel'), owner_path(@owner), :class => 'btn btn-info'
        /= link_to t('.back', :default => t("helpers.links.back")), registrations_instruction_path, :class => 'btn btn-info' 
