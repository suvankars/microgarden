- if @owner.profile_picture.present?
  -@owner.profile_picture.each do |image|
    .col-xs-6.col-md-6.col-sm-6.col-lg-12
      .show_profile_thumbnail{:id => image["public_id"]}
        = image_tag(image["thumbnail_url"])
        = link_to "Delete", image_path(:id => @owner.id, :resource_type => @owner.class, :image_type => image["image_type"], :img_pub_id => image["public_id"] ), :method => :delete, data: { confirm: "Are you sure you want to delete this image?" , :remote => true}
        
:javascript
  $(document).ready(function() {
      $('.deleteAll').click(function () {
          var Url = "#{Rails.application.routes.url_helpers.remove_all_product_images_path(@owner)}"
          $('#images').empty();
          
          $.get(Url);
          return false;
      });
  });

 