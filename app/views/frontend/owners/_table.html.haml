- model_class = Owner
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:phone_number)
      /%th= model_class.human_attribute_name(:profile_picture)
      %th= model_class.human_attribute_name(:address_line_1)
      %th= model_class.human_attribute_name(:address_line_2)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:country)
      %th= model_class.human_attribute_name(:pincode)
      %th= model_class.human_attribute_name(:parmanent_address)
      %th= model_class.human_attribute_name(:office_email)
      /%th= model_class.human_attribute_name(:id_proof_documents)
      %th= model_class.human_attribute_name(:age)
      %th= model_class.human_attribute_name(:height)
      %th= model_class.human_attribute_name(:number_of_bike)
      %th= model_class.human_attribute_name(:price_segment)
      %th= model_class.human_attribute_name(:market_price)
      %th= model_class.human_attribute_name(:reference)
      %th= model_class.human_attribute_name(:reference_name)
      %th= model_class.human_attribute_name(:reference_email)
      %th= model_class.human_attribute_name(:reference_phone_number)
      %th= model_class.human_attribute_name(:verified)
      %th= model_class.human_attribute_name(:verification_comment)
      %th= model_class.human_attribute_name(:verified_by)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @owners.each do |owner|
      %tr
        %td= link_to owner.id, owner_path(owner)
        %td= owner.first_name
        %td= owner.last_name
        %td= owner.email
        %td= owner.phone_number
        /%td= owner.profile_picture
        %td= owner.address_line_1
        %td= owner.address_line_2
        %td= owner.city
        %td= owner.state
        %td= owner.country
        %td= owner.pincode
        %td= owner.parmanent_address
        %td= owner.office_email
        /%td= owner.id_proof_documents
        %td= owner.age
        %td= owner.height
        %td= owner.number_of_bike
        %td= owner.price_segment
        %td= owner.market_price
        %td= owner.reference
        %td= owner.reference_name
        %td= owner.reference_email
        %td= owner.reference_phone_number
        %td= owner.verified
        %td= owner.verification_comment
        %td= owner.verified_by
        %td=l owner.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_owner_path(owner), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), owner_path(owner), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

/= link_to t('.new', :default => t("helpers.links.new")), new_owner_path, :class => 'btn btn-primary'
