- model_class = Schedule
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize


%p
  %strong= model_class.human_attribute_name(:start_time) + ':'
  %br
  = @schedule.start_time
%p
  %strong= model_class.human_attribute_name(:end_time) + ':'
  %br
  = @schedule.end_time
%p
  %strong= model_class.human_attribute_name(:morning_ride) + ':'
  %br
  = @schedule.morning_ride
%p
  %strong= model_class.human_attribute_name(:evening_ride) + ':'
  %br
  = @schedule.evening_ride
%p
  %strong= model_class.human_attribute_name(:all_day) + ':'
  %br
  = @schedule.all_day
%p
  %strong= model_class.human_attribute_name(:list_id) + ':'
  %br
  = @schedule.list_id



= link_to t('.back', :default => t("helpers.links.back")), list_path(@list), :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_list_schedule_path(@list, self), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), list_schedule_path(@list, self), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
