- if @list.images.present?
  .deleteAll
    = link_to "Delete All", "#", :method => :get, data: { confirm: "Are you sure you want to delete ALL images?" }

  -@list.images.each do |image|
    %li{:id => image["public_id"]}
      = image_tag(image["thumbnail_url"])
      = link_to "Delete", image_path(:id => @list.id, :resource => @list.class, :img_pub_id => image["public_id"] ), :method => :delete, data: { confirm: "Are you sure you want to delete this image?" , :remote => true}
      
:javascript
  $(document).ready(function() {
      $('.deleteAll').click(function () {
          var Url = "#{Rails.application.routes.url_helpers.remove_all_product_images_path(@list)}"
          $('#images').empty();
          
          $.get(Url);
          return false;
      });
  });

 